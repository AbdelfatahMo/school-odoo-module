<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>

        <record id="school_student_view_kanban" model="ir.ui.view">
            <field name="name">school_student.view.kanban</field>
            <field name="model">school.student</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="student_name" />
                    <field name="student_id" />
                    <field name="birth_date" />
                    <field name="age" />
                    <field name="gender" />
                    <field name="year" />
                    <field name="class_id" />
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                <div class="o_kanban_image mr-1">
                                    <img
                                        t-att-src="kanban_image('school.student','image_128','record.id.raw_value')"
                                        alt="Student Image" class="o_image_64_contain" />
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="school_student_view_form" model="ir.ui.view">
            <field name="name">school.student.view.form</field>
            <field name="model">school.student</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <field name="student_img" widget="image" class="oe_avatar" />
                        <div class='oe_title'>
                            <h1>
                                <label for='student_name' string="Name" class="oe_edit_only" />
                                <field name="student_name" />
                            </h1>
                        </div>
                        <group>
                            <group string="Student Info">
                                <field name="student_id" />
                                <field name="birth_date" />
                                <field name="age" />
                                <field name="gender" />
                            </group>
                            <group string="Acadmic Info">
                                <field name="class_id" />
                                <field name="year" />
                            </group>
                        </group>
                        <notebook>
                            <page name="subjects" string="Subjects">
                                <field name="subjects_ids">
                                    <tree create="true" delete="true"
                                        edit="true" editable="top">
                                        <field name="subject" />
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="school_student_view_tree" model="ir.ui.view">
            <field name="name">school.student.view.tree</field>
            <field name="model">school.student</field>
            <field name="arch" type="xml">
                <tree string="student">
                    <field name="student_name" />
                    <field name="student_id" />
                    <field name="birth_date" />
                    <field name="age" />
                    <field name="gender" />
                    <field name="year" />
                    <field name="class_id" />
                </tree>
            </field>
        </record>

        <record id="school_student_action" model="ir.actions.act_window">
            <field name="name">students</field>
            <field name="res_model">school.student</field>
            <field name="view_mode">tree,form,kanban</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Enter students.
                </p>
            </field>
        </record>

    </data>
</odoo>